/* pages/detail-video/detail-video.wxss */
.video {
  width: 100%;
  vertical-align: top;
}

.content {
  box-sizing: border-box;
  height: calc(100% - 225px);
  padding: 25rpx;
}

.content .info > view {
  margin-bottom: 15rpx;
}

.content .info .title {
  font-size: 40rpx;
  font-weight: 700;
}

.content .info .desc, 
.content .info .time {
  font-size: 25rpx;
  color: #999999;
}

.related-video-list .related-title {
  margin: 40rpx 0;
}

.related-video-list .item {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
}

.related-video-list .item:last-child {
  margin-bottom: 0;
}

.related-video-list .item .album {
  position: relative;
  overflow: hidden;
  width: 250rpx;
  border-radius: 12rpx;
}

.related-video-list .item .album .image {
  width: 100%;
  vertical-align: top;
}

.related-video-list .item .album .info {
  position: absolute;
  bottom: 5rpx;
  right: 5rpx;
}

.related-video-list .item .album .count {
  position: relative;
  color: #aaaaaa;
  margin: 0;
  font-size: 25rpx;
}

.related-video-list .item .album .count::before {
  content: "";
  position: absolute;
  left: -35rpx;
  top: 3rpx;
  width: 30rpx;
  height: 30rpx;
  background-size: cover;
  background-image: url(data:image/png;base64,);
}

.related-video-list .item .desc {
  flex: 1;
  margin-left: 20rpx;
}

.related-video-list .item .desc .title {
  font-size: 28rpx;

  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.related-video-list .item .desc .name {
  font-size: 23rpx;
  color: #777777;
}